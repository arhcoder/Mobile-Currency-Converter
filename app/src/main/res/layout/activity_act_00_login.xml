<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/spr_fondo_06">
    <!--android:background="#2d2341" -->

    <Button
            android:text="Acceder"
            android:layout_width="224dp"
            android:layout_height="52dp"
            android:id="@+id/Btn_Acceder"
            android:background="@drawable/prop_btn_azul_redondeado"
            android:onClick="acceder"
            android:textColor="@color/Blanco" android:textSize="18sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/Pdw_Contraseña"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="Registrarse"
            android:layout_width="225dp"
            android:layout_height="52dp"
            android:id="@+id/Btn_Registrarse"
            android:background="@drawable/prop_btn_azul_redondeado"
            android:onClick="registrarse" android:textColor="@color/Blanco"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintTop_toBottomOf="@+id/Btn_Acceder" android:layout_marginTop="1dp"/>
    <EditText
            android:layout_width="287dp"
            android:layout_height="51dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Txt_Usuario"
            android:hint="Usuario:"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.418" app:layout_constraintHorizontal_bias="0.521"
            android:textColorHint="@color/GrisHint" android:textColor="@color/Blanco"/>
    <EditText
            android:layout_width="287dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/Pdw_Contraseña"
            android:hint="Contraseña:"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.521" app:layout_constraintVertical_bias="0.542"
            android:textColorHint="@color/GrisHint" android:textColor="@color/Blanco"/>
    <ImageView
            android:layout_height="152dp" app:srcCompat="@drawable/spr_logo_arh"
            android:id="@+id/Img_Logo"
            android:layout_width="212dp" android:layout_marginTop="42dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/Lbl_Datos" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp" android:layout_marginEnd="42dp" android:layout_marginRight="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:gravity="center" android:textColor="@color/AmarilloPollo" android:textStyle="bold|italic"
            android:textSize="18sp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/Btn_Registrarse"/>
</android.support.constraint.ConstraintLayout>